    <script src="{{ asset("js/dataTables.bootstrap4.min.js") }}"></script>

    <script>
        $(document).ready(() => {
            $("table").dataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.0.7/i18n/fr-FR.json'
                }
            })
        })
    </script>
{% endblock %}