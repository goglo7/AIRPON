{% extends 'list.html.twig' %}

{% block title %}Liste des Olts{% endblock %}

{% block body %}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            {%if type == 'error'%} {% set type = 'danger' %} {%endif%}
            <div class="alert alert-{{ type }}">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="d-flex align-items-center justify-content-end my-2">
        <a href="{{ path("app_olt_new") }}" class="btn btn-primary">Cr√©er</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Loc</th>
                <th>Gps</th>
                <th>Adresse</th>
                <th>DateInstallation</th>
                <th>VlanManagement</th>
                <th>PortMetro</th>
                <th>CapacitePortMetro</th>
                <th>AdresseManagement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for olt in olts %}
            <tr>
                <td>{{ olt.id }}</td>
                <td>{{ olt.loc }}</td>
                <td>{{ olt.gps }}</td>
                <td>{{ olt.adresse }}</td>
                <td>{{ olt.dateInstallation ? olt.dateInstallation|date('Y-m-d  ') : '' }}</td>
                <td>{{ olt.vlanManagement }}</td>
                <td>{{ olt.portMetro }}</td>
                <td>{{ olt.capacitePortMetro }}</td>
                <td>{{ olt.adresseManagement }}</td>
                <td>
                    <a  class="me-2 btn btn-primary" href="{{ path('app_olt_show', {'id': olt.id}) }}">Afficher</a>
                    <a  class="me-2 btn btn-primary" href="{{ path('app_olt_edit', {'id': olt.id}) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
