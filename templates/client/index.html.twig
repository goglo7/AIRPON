{% extends 'list.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            {%if type == 'error'%} {% set type = 'danger' %} {%endif%}
            <div class="alert alert-{{ type }}">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="d-flex align-items-center justify-content-end my-2">
        <a href="{{ path("app_client_new") }}" class="btn btn-primary">Cr√©er</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cin</th>
                <th>Nom</th>
                <th>Pernom</th>
                <th>Adresse</th>
                <th>Gps</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.cin }}</td>
                <td>{{ client.nom }}</td>
                <td>{{ client.pernom }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.gps }}</td>
                <td>
                    <a class="me-2 btn btn-primary" href="{{ path('app_client_show', {'id': client.id}) }}">Afficher</a>
                    <a class="me-2 btn btn-primary" href="{{ path('app_client_edit', {'id': client.id}) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
