{% set title = block("title") %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Airpon - {{ title }}</title>
    <link href="{{ asset('css/font-awsome.min.css') }}" rel="stylesheet" type="text/css">
    <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet">
    <link href="{{ asset("css/all.min.css") }}" rel="stylesheet">
    {% block styleImport %}{% endblock %}
</head>
<body id="page-top">
<!-- Page Wrapper -->
<div id="wrapper">
    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
        <!-- Sidebar - Brand -->
        <a class="sidebar-brand d-flex align-items-center justify-content-center" href="{{ path("app_home") }}">
            <img src="{{ asset("img/logo.png") }}" class="img-fluid w-50"/>
            <div class="sidebar-brand-text" style="font-size: 1.75rem">Airpon</div>
        </a>
        {% if is_granted("ROLE_ADMIN") %}
            <div class="sidebar-heading">
                Administration
            </div>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_projet_index") }}">
                    <i class="fas fa-fw fa-project-diagram"></i>
                    <span>Projets</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_direction_index") }}">
                    <i class="fas fa-fw fa-building"></i>
                    <span>Directions</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_olt_index") }}">
                    <i class="fas fa-fw fa-boxes"></i>
                    <span>Olts</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_reception_olt_index") }}">
                    <i class="fas fa-fw fa-boxes"></i>
                    <span>Receptions Olt</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_user_index") }}">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Utilisateurs</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTypes" aria-expanded="false" aria-controls="collapseTypes">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>Types</span>
                </a>
                <div id="collapseTypes" class="collapse" aria-labelledby="headingUtilities" data-parent="#accordionSidebar" style="">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Gestion des Types:</h6>
                        <a class="collapse-item" href="{{ path("app_c_type_index") }}">CType</a>
                        <a class="collapse-item" href="{{ path("app_position_olt_index") }}">PositionOlt</a>
                        <a class="collapse-item" href="{{ path("app_type_direction_index") }}">TypeDirection</a>
                        <a class="collapse-item" href="{{ path("app_type_olt_index") }}">TypeOlt</a>
                    </div>
                </div>
            </li>
        {% endif %}
        {% if is_granted("ROLE_RESPONSABLE") %}
            <div class="sidebar-heading">
                Responsable DRT
            </div>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_box_index") }}">
                    <i class="fas fa-fw fa-box"></i>
                    <span>Box</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_cable_inter_box_index") }}">
                    <i class="fas fa-fw fa-boxes"></i>
                    <span>Cables inter box</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_hub_index") }}">
                    <i class="fas fa-fw fa-boxes"></i>
                    <span>Hub</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_cable_hub_box_index") }}">
                    <i class="fas fa-fw fa-boxes"></i>
                    <span>Cables hub box</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_reception_hub_index") }}">
                    <i class="fas fa-fw fa-boxes"></i>
                    <span>Receptions Hub</span></a>
            </li>
        {% endif %}
        {% if is_granted("ROLE_CLIENTELE") %}
            <div class="sidebar-heading">
                Clientèle DRT
            </div>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_client_index") }}">
                    <i class="fas fa-fw fa-user-circle"></i>
                    <span>Clients</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_airpon_client_index") }}">
                    <i class="fas fa-fw fa-user-circle"></i>
                    <span>Airpon clients</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path("app_modem_ont_index") }}">
                    <i class="fas fa-fw fa-box"></i>
                    <span>Modem ONT</span></a>
            </li>
        {% endif %}
    </ul>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                <!-- Sidebar Toggle (Topbar) -->
                <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                    <i class="fa fa-bars"></i>
                </button>
                <!-- Topbar Navbar -->
                <ul class="navbar-nav ml-auto">
                    <!-- Nav Item - User Information -->
                    <li class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="mr-2 d-none d-lg-inline text-gray-600 small">{{ app.user.matricule }}</span>
                            <img class="img-profile rounded-circle"
                                 src="{{ asset('img/profile.svg') }}">
                        </a>
                        <!-- Dropdown - User Information -->
                        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                             aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="{{ path("auth_logout") }}">
                                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                Déconnexion
                            </a>
                        </div>
                    </li>
                </ul>
            </nav>
            <!-- End of Topbar -->
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">{{ title }}</h1>
                </div>
                {% block body %}{% endblock %}
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->
<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
<script src="{{ asset("js/jquery.min.js") }}"></script>
<script src="{{ asset("js/font-awsome.min.js") }}"></script>
<script src="{{ asset("js/bootstrap.bundle.min.js") }}"></script>
<script src="{{ asset("js/jquery.easing.min.js") }}"></script>
<script src="{{ asset("js/all.min.js") }}"></script>
{% block jsImport %}{% endblock %}
</body>
</html>