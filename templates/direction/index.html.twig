{% extends 'list.html.twig' %}

{% block title %}Liste des directions{% endblock %}

{% block body %}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            {%if type == 'error'%} {% set type = 'danger' %} {%endif%}
            <div class="alert alert-{{ type }}">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="d-flex align-items-center justify-content-end my-2">
        <a href="{{ path("app_direction_new") }}" class="btn btn-primary">Cr√©er</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for direction in directions %}
            <tr>
                <td>{{ direction.id }}</td>
                <td>{{ direction.designation }}</td>
                <td>
                    <a class="me-2 btn btn-primary" href="{{ path('app_direction_show', {'id': direction.id}) }}">Afficher</a>
                    <a class="me-2 btn btn-primary" href="{{ path('app_direction_edit', {'id': direction.id}) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
